<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.javaprojegui.controller.AdminController">

    <center>
        <TabPane>
            <!-- MATERIALS -->
            <Tab text="Materials" closable="false">
                <BorderPane>
                    <center>
                        <TableView fx:id="MalzemlertableView">
                            <columns>
                                <TableColumn fx:id="MalzemeID" text="Material ID"/>
                                <TableColumn fx:id="MalzemeAdi" text="Material Name"/>
                                <TableColumn fx:id="Kategori" text="Category"/>
                                <TableColumn fx:id="Miktar" text="Quantity"/>
                                <TableColumn fx:id="Birim" text="Unit"/>
                            </columns>
                        </TableView>
                    </center>

                    <bottom>
                        <HBox spacing="10" alignment="CENTER">
                            <Button fx:id="Malzeme_ekle" text="Add New Material" onAction="#malzeme_Ekle"/>
                            <Button fx:id="Malzeme_guncelle" text="Update Material" onAction="#malzeme_Guncelle"/>
                            <Button fx:id="Malzeme_sil" text="Delete Material" onAction="#malzeme_Sil"/>
                        </HBox>
                    </bottom>
                </BorderPane>
            </Tab>

            <!-- CHEMICALS -->
            <Tab text="Chemicals" closable="false">
                <BorderPane>
                    <center>
                        <TableView fx:id="KimyasallartableView">
                            <columns>
                                <TableColumn fx:id="KimyasalID" text="Chemical ID"/>
                                <TableColumn fx:id="KimyasalAdi" text="Chemical Name"/>
                                <TableColumn fx:id="TehlikeSinifi" text="Hazard Class"/>
                                <TableColumn fx:id="K_Miktar" text="Quantity"/>
                                <TableColumn fx:id="SonKullanmaTarihi" text="Expiration Date"/>
                            </columns>
                        </TableView>
                    </center>

                    <bottom>
                        <HBox spacing="10" alignment="CENTER">
                            <Button fx:id="Kimyasal_ekle" text="Add New Chemical" onAction="#kimyasal_Ekle"/>
                            <Button fx:id="Kimyasal_guncelle" text="Update Chemical" onAction="#kimyasal_Guncelle"/>
                            <Button fx:id="Kimyasal_sil" text="Delete Chemical" onAction="#kimyasal_Sil"/>
                        </HBox>
                    </bottom>
                </BorderPane>
            </Tab>

            <!-- STOCK MOVEMENTS -->
            <Tab text="Stock Movements" closable="false">
                <BorderPane>
                    <center>
                        <TableView fx:id="stokTableView">
                            <columns>
                                <TableColumn fx:id="HareketID" text="Movement ID"/>
                                <TableColumn fx:id="UrunAdi" text="Product Name"/>
                                <TableColumn fx:id="Giris_Cikis" text="In / Out"/>
                                <TableColumn fx:id="S_Miktar" text="Quantity"/>
                                <TableColumn fx:id="Tarih" text="Date"/>
                            </columns>
                        </TableView>
                    </center>

                    <bottom>
                        <HBox spacing="10" alignment="CENTER">
                            <Button fx:id="StokHareket_Ekle" text="Add Stock Movement" onAction="#stok_Ekle"/>
                            <Button fx:id="StokHareket_guncelle" text="Update Stock Movement" onAction="#stok_Guncelle"/>
                            <Button fx:id="StokHareket_sil" text="Delete Stock Movement" onAction="#stok_Sil"/>
                        </HBox>
                    </bottom>
                </BorderPane>
            </Tab>

            <!-- USER MANAGEMENT -->
            <Tab text="User Management" closable="false">
                <BorderPane>
                    <center>
                        <TableView fx:id="KullaniciYonetimitableView">
                            <columns>
                                <TableColumn fx:id="KullaniciID" text="User ID"/>
                                <TableColumn fx:id="Ad_Soyad" text="Full Name"/>
                                <TableColumn fx:id="Rol" text="Role"/>
                            </columns>
                        </TableView>
                    </center>

                    <bottom>
                        <HBox spacing="10" alignment="CENTER">
                            <Button fx:id="Kullanici_Ekle" text="Add New User" onAction="#kullanici_Ekle"/>
                            <Button fx:id="Kullanici_guncelle" text="Update User" onAction="#kullanici_Guncelle"/>
                            <Button fx:id="Kullanici_sil" text="Delete User" onAction="#kullanici_Sil"/>
                        </HBox>
                    </bottom>
                </BorderPane>
            </Tab>

        </TabPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button fx:id="cikisBtn"
                    text="Logout"
                    onAction="#cikisYap"/>
        </HBox>
    </bottom>

</BorderPane>