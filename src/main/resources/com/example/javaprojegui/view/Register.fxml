<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.javaprojegui.controller.RegisterController"
           prefWidth="360" prefHeight="480"
           style="-fx-background-color: linear-gradient(to bottom right, #1e3c72, #2a5298);">

    <VBox alignment="CENTER" spacing="12"
          prefWidth="280"
          style="-fx-background-color: white;
                 -fx-padding: 25;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 5);">

        <Label text="Kayıt Ol"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <TextField fx:id="txtUsername"
                   promptText="Kullanıcı Adı"
                   prefWidth="220"
                   maxWidth="220"/>

        <TextField fx:id="txtEmail"
                   promptText="E-mail"
                   prefWidth="220"
                   maxWidth="220"/>

        <PasswordField fx:id="txtPassword"
                       promptText="Şifre"
                       prefWidth="220"
                       maxWidth="220"/>

        <ComboBox fx:id="cmbRole"
                  promptText="Rol Seç"
                  prefWidth="220"/>

        <Button text="Kaydı Tamamla"
                prefWidth="220"
                style="-fx-background-color: #2a5298; -fx-text-fill: white;"
                onAction="#handleRegister"/>

        <Button text="Giriş Ekranına Dön"
                prefWidth="220"
                style="-fx-background-color: #6c757d; -fx-text-fill: white;"
                onAction="#goToLogin"/>

        <Label fx:id="lblMessage"
               style="-fx-text-fill: red;"/>

    </VBox>
</StackPane>
